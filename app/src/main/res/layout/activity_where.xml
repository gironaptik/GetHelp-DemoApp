<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WhereActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF6969"
        android:backgroundTint="#C3FF6969"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/userpicturefull" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="בקשה חדשה" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/menubutton" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/where01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ניתן לבחור מבקשות קומות"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="או להכניס מלל חופשי"/>

        <ImageView
            android:id="@+id/where02"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:src="@drawable/where02"/>

        <ImageView
            android:id="@+id/where03"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:src="@drawable/where03"/>

        <ImageView
            android:id="@+id/where04"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:src="@drawable/where04"/>

        <ImageView
            android:id="@+id/where05"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:src="@drawable/where05"/>
        <ImageView
            android:id="@+id/where06"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:src="@drawable/where06"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:text="הקלד כתובת כאן" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/proceed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:tag="off"
                android:src="@drawable/back"/>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="באפשרות גם להקליט"/>

            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:src="@drawable/cancel"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>